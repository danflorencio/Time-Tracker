{
  "manifest_version": 2,

  "name": "Timer",
  "description": "Keep track of the time you spend/waste on websites",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click to start the stopwatch!"
  },


  "permissions": [
    "tabs",
    "activeTab"
  ]
}
