{
  "manifest_version": 2,

  "name": "QuickNews",
  "description": "This extension shows the top news stories in a small popup.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Grab those headlines"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
